<!DOCTYPE html>
<html>
  <head>
    <title>Docoffice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |e|  %>
          <li style="color: red;"><%= e %></li>
        <% end %>
      </ul>
    <% end %>

    <div>
     <% if logged_in? %>
       <p> You are logged in as <%= link_to current_user.username, current_user %> </p>
       <p> <%= link_to "Log out", logout_path, method: "post" %> </p>

       <% if current_user.admin == true %>
         <p> You are an admin </p>
       <% else %>
         <p> You are a user </p>
       <% end %>

     <% else %>
       <p> You are not logged in. </p>
       <p> <%= link_to "Log in?", login_path %> </p>
       <p> or </p>
       <p> <%= link_to "Sign up?", signup_path %> </p>
     <% end %>
   </div>

   <% if flash[:authorized] %>
     <p> <%= flash[:authorized] %> </p>
   <% end %>

    <%= yield %>
  </body>
</html>
